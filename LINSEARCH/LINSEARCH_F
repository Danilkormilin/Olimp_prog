#include<stdio.h>
#include<math.h>

int main()
{
    int B[1001] = { 0 }, vx, n, max = -2000,maxn;
    scanf("%d", &n);
    for (int i = 1; i <= n; i++)
    {
        scanf("%d", &vx);
        if (vx > max)
        {
            max = vx;
            maxn = i;
        }
    }
    printf("%d", maxn);
    return (0);
}
